browser linkhandler
reload-threads 100
feed-sort-order	date
external-url-viewer "urlscan -dc -r 'linkhandler {}'"

macro m set browser "/usr/bin/mpv --really-quiet --ytdl-format=best[height=720] %u"; open-in-browser ; set browser "/usr/local/bin/surf %u"

